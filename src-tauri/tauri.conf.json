{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KontaktMax",
  "version": "0.1.0",
  "identifier": "com.kontaktmax.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "KontaktMax",
        "width": 1399,
        "height": 650,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "visible": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window-permissions",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-close",
            "core:window:allow-hide",
            "shell:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
